<AnchorPane prefHeight="397.0" prefWidth="684.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.genshinwishsimapp.WeaponBanner">
   <children>
      <ImageView fitHeight="614.0" fitWidth="1130.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/weaponBanner.jpg" />
         </image>
         <viewport>
            <Rectangle2D />
         </viewport>
      </ImageView>
      <Button fx:id="singleSummon" layoutX="667.0" layoutY="568.0" mnemonicParsing="false" onAction="#singleSummon" opacity="0.0" prefHeight="46.0" prefWidth="205.0" text="1x" />
      <Button fx:id="multiSummon" layoutX="886.0" layoutY="568.0" mnemonicParsing="false" onAction="#multiSummon" opacity="0.0" prefHeight="46.0" prefWidth="205.0" text="10x" />
      <Label fx:id="PrimoGemsAmount" layoutX="705.0" layoutY="521.0" text="Primogems:" textFill="#f5f5f5">
         <font>
            <Font size="32.0" />
         </font>
      </Label>
      <Button fx:id="standardBannerButton" layoutX="31.0" layoutY="553.0" mnemonicParsing="false" onAction="#switchToStandardBanner" prefHeight="60.0" prefWidth="342.0" text="Back to Standard Banner" />
      <Label fx:id="SummonsAvailable" layoutX="186.0" layoutY="513.0" prefHeight="47.0" prefWidth="324.0" text="Summons:" textFill="#fcf7f7">
         <font>
            <Font size="32.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
